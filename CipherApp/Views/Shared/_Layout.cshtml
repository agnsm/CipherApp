@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/images/icon.ico" type="image/gif" sizes="16x16">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@200;400;700&family=Raleway:wght@200;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/3.0.0-beta.6/aos.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="nav-wrapper">
        <nav class="navbar navbar-expand-lg w-100">
            <partial name="_Culture" />
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">@Localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#encoder">@Localizer["Encrypt"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#decoder">@Localizer["Decrypt"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#description">@Localizer["Information"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#fun-facts">@Localizer["FunFacts"]</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <main id="home">
        <div class="container-fluid">
            @RenderBody()
        </div>
        <div class="cookie-info d-none">
            <p>@Localizer["CookieInfo"]</p>
            <div><i class="fas fa-times info-close"></i></div>
        </div>
    </main>
    <footer>
        <div class="container-fluid">
            <div class="d-xl-none"><a href='https://www.freepik.com/vectors/background'><i class="fas fa-link"></i>Background vector created by starline - www.freepik.com</a></div>
            &copy; 2021 Agnieszka Smolińska
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
