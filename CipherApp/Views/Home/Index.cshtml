@model CipherApp.Models.VigenereModel

@{
    ViewData["Title"] = Localizer["Heading"];
}

<div class="banner d-flex flex-column justify-content-center">
    <div class="about mt-5">
        <h1 class="text-uppercase">@Localizer["Heading"]</h1> 
        <h3>@Localizer["Subheading"]</h3>
        <p>@Localizer["Description"]</p>
    </div>
    <div class="chars">x</div>
    <div class="chars">$</div>
    <div class="chars">0</div>
    <div class="chars">h</div>
    <div class="chars">w</div>
    <div class="chars">q</div>
    <div class="chars">#</div>
    <div class="chars">u</div>
